{
  "name": "@ruslanlap/pagespeed-insights-mcp",
  "version": "1.0.0",
  "description": "MCP server for Google PageSpeed Insights API - analyze web performance with Claude",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/index.ts",
    "start": "node dist/index.js",
    "lint": "echo 'Linting skipped for now'",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "prepublishOnly": "npm run lint && npm run typecheck && npm run test && npm run build"
  },
  "bin": {
    "pagespeed-insights-mcp": "dist/index.js"
  },
  "files": [
    "dist",
    "README.md",
    "package.json"
  ],
  "keywords": [
    "mcp",
    "pagespeed",
    "performance",
    "web",
    "google",
    "lighthouse",
    "claude",
    "model-context-protocol",
    "web-performance",
    "seo",
    "accessibility"
  ],
  "author": "PageSpeed Insights MCP Contributors",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ruslanlap/pagespeed-insights-mcp.git"
  },
  "homepage": "https://github.com/ruslanlap/pagespeed-insights-mcp#readme",
  "bugs": {
    "url": "https://github.com/ruslanlap/pagespeed-insights-mcp/issues"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.6.0",
    "node-fetch": "^3.3.2",
    "p-limit": "^4.0.0",
    "p-retry": "^6.1.0",
    "pino": "^8.17.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@types/node": "^20.0.0",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.57.0",
    "nock": "^13.5.0",
    "pino-pretty": "^10.3.1",
    "prettier": "^3.2.5",
    "semantic-release": "^21.1.2",
    "tsx": "^4.6.0",
    "typescript": "^5.3.0",
    "vitest": "^4.0.12"
  },
  "engines": {
    "node": ">=18"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/",
    "access": "public"
  }
}
